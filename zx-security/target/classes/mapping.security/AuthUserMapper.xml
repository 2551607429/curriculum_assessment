<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dsa.security.dao.AuthUserMapper" >
    <select id="getUserInfoByUsername" resultType="com.dsa.security.model.AuthUser" parameterType="java.lang.String">
        SELECT
            userId,
            username,
            password,
            salt
        FROM
            auth_user
        WHERE
            username = #{username,jdbcType=VARCHAR}

    </select>
</mapper>